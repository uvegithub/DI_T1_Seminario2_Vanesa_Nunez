<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ejercicio3">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edittextnom"
        android:hint="Nombres que inserto: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/botoninsertardato"/>

    <Button
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:id="@+id/botoninsertardato"
        app:layout_constraintTop_toBottomOf="@id/edittextnom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Insertar nombre"/>

    <Button
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:id="@+id/botonpasardato"
        app:layout_constraintTop_toBottomOf="@id/botoninsertardato"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Pasar datos a otra actividad"/>

</androidx.constraintlayout.widget.ConstraintLayout>