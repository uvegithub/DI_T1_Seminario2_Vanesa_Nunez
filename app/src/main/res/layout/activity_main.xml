<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    >

    <Button
        android:id="@+id/buttontres_en_raya"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tres en raya"
        android:onClick="iniciarActividad"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/button1"
    />

    <Button
        android:id="@+id/buttonejer2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ejercicio 2"
        android:onClick="iniciarActividadejercicio2"
        app:layout_constraintTop_toBottomOf="@+id/buttontres_en_raya"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/buttonejer3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ejercicio 3"
        android:onClick="iniciarActividadejercicio3"
        app:layout_constraintTop_toBottomOf="@+id/buttonejer2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/buttonejer4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ejercicio 4"
        android:onClick="iniciarActividadejercicio4"
        app:layout_constraintTop_toBottomOf="@+id/buttonejer3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
